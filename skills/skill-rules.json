{
	"$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schema/skill-rules.schema.json",
	"skills": {
		"naming-conventions": {
			"type": "standard",
			"enforcement": "suggest",
			"priority": "medium",
			"promptTriggers": {
				"keywords": [
					"naming",
					"variable",
					"function",
					"class",
					"interface",
					"type",
					"const"
				]
			}
		},
		"typescript-patterns": {
			"type": "domain",
			"enforcement": "suggest",
			"priority": "high",
			"fileTriggers": {
				"pathPatterns": ["**/*.ts", "**/*.tsx"]
			},
			"promptTriggers": {
				"keywords": [
					"typescript",
					"type",
					"interface",
					"generic",
					"utility type"
				]
			}
		},
		"react-patterns": {
			"type": "domain",
			"enforcement": "suggest",
			"priority": "high",
			"fileTriggers": {
				"pathPatterns": [
					"src/**/*.tsx",
					"src/**/*.jsx",
					"app/**/*.tsx",
					"components/**/*.tsx"
				]
			},
			"promptTriggers": {
				"keywords": [
					"component",
					"react",
					"hook",
					"jsx",
					"tsx",
					"useState",
					"useEffect",
					"useCallback",
					"useMemo"
				],
				"intentPatterns": [
					"create.*component",
					"refactor.*component",
					"fix.*component"
				]
			}
		},
		"tailwind-patterns": {
			"type": "domain",
			"enforcement": "suggest",
			"priority": "medium",
			"fileTriggers": {
				"pathPatterns": ["**/*.tsx", "**/*.jsx"],
				"contentPatterns": ["className="]
			},
			"promptTriggers": {
				"keywords": ["tailwind", "styling", "css", "className", "responsive"]
			}
		},
		"security-patterns": {
			"type": "guardrail",
			"enforcement": "suggest",
			"priority": "high",
			"promptTriggers": {
				"keywords": [
					"security",
					"validation",
					"auth",
					"password",
					"token",
					"sanitize",
					"xss",
					"sql injection",
					"zod"
				]
			}
		},
		"convex-patterns": {
			"type": "domain",
			"enforcement": "suggest",
			"priority": "high",
			"fileTriggers": {
				"pathPatterns": ["convex/**/*.ts", "convex/**/*.js"],
				"contentPatterns": [
					"from \"convex",
					"mutation\\(",
					"query\\(",
					"action\\("
				]
			},
			"promptTriggers": {
				"keywords": [
					"convex",
					"mutation",
					"query",
					"action",
					"ctx.db",
					"database"
				]
			}
		},
		"bun-patterns": {
			"type": "tooling",
			"enforcement": "suggest",
			"priority": "low",
			"fileTriggers": {
				"pathPatterns": ["bun.lockb", "bunfig.toml"]
			},
			"promptTriggers": {
				"keywords": ["bun", "package manager", "dependencies"]
			}
		},
		"framework-patterns": {
			"type": "domain",
			"enforcement": "suggest",
			"priority": "high",
			"fileTriggers": {
				"pathPatterns": [
					"next.config.*",
					"app/**/route.ts",
					"app/**/page.tsx",
					"app/**/layout.tsx",
					"**/routeTree.gen.ts",
					"src/routes/**/*.tsx"
				]
			},
			"promptTriggers": {
				"keywords": [
					"next.js",
					"tanstack start",
					"routing",
					"server component",
					"client component",
					"route handler"
				]
			}
		}
	}
}
